#include <bits/stdc++.h>
using namespace std;

int main()
{
	char ch[26] = {'a', 'b', 'c','d', 'e', 'f', 'g', 'h', 'i', 'j', 'k', 'l', 'm', 'n', 'o', 'p', 'q', 'r', 's','t','u','v','w', 'x', 'y', 'z'};
	int t;
	cin >> t;

	while(t--)
	{
		int m, n, l;
		cin >> m >> n;


		for(l=0; l<m; l++)
		{	
			int i, a[26] ={0}, count = 0;
			string s, ans = "";
			cin >> s;

			for(i=0; i<s.size(); i++)
			{
				char c;
				int temp;
				temp = (int)s[i] - n + 1 - 97;
				if(temp < 0)
					temp = 26 + temp;

				c = ch[temp];

				ans += c;
			}	

			for(i=0; i<ans.size(); i++)
			{
				a[((int)ans[i]) - 97]++;
			}

			sort(a, a+26);
			count = 1;
			int ans1 = 0;

			for(i=25; i>=0; i--)
			{
				//cout << a[i] << endl;
				if(a[i] > 0)
				{
					ans1 += (count*a[i]);
					count++;
				}
			}

			cout << ans << " " << ans1 << endl;

		}
	}

	return 0;
}
